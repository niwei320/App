<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/delivery_info_item"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:layout_margin="40dp"
    android:background="@drawable/location_label"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/delivery_info_item_title"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="3dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:ellipsize="end"
            android:textStyle="bold"
            android:text=""
            android:maxLines="1"
            />

        <LinearLayout
            android:id="@+id/delivery_info_item_msg_item"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="3dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/delivery_info_item_msg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="11sp"
                android:ellipsize="end"
                android:text=""
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/delivery_info_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5799f7"
                android:textSize="11sp"
                android:ellipsize="end"
                android:textStyle="bold"
                android:text=""
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/delivery_info_item_msg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="11sp"
                android:ellipsize="end"
                android:text=""
                android:maxLines="1"
                />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="5dp"
        android:layout_marginEnd="8dp"
        android:layout_height="8dp"
        android:background="@drawable/dingdan_back"
        android:backgroundTint="@color/color999999"
        android:scaleX="-1" />
</LinearLayout>