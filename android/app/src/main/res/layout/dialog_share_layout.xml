<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_back_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_back_white"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="分享到"
                android:textColor="@color/color_text_content1"
                android:textSize="15sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/dialog_base_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialog_share_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/share_2"
                android:gravity="center_horizontal"
                android:text="微信"
                android:textColor="@color/color_text_content2"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/dialog_share_wechat_moment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/share_3"
                android:gravity="center_horizontal"
                android:text="朋友圈"
                android:textColor="@color/color_text_content2"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/dialog_share_sian"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/share_1"
                android:gravity="center_horizontal"
                android:text="微博"
                android:textColor="@color/color_text_content2"
                android:textSize="@dimen/font_size_normal" />
            <TextView
                android:id="@+id/dialog_share_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/share_4"
                android:gravity="center_horizontal"
                android:text="QQ"
                android:textColor="@color/color_text_content2"
                android:textSize="@dimen/font_size_normal" />

        </LinearLayout>

        <LinearLayout
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialog_share_qzone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/share_5"
                android:gravity="center_horizontal"
                android:text="QQ空间"
                android:textColor="@color/color_text_content2"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/dialog_share_copy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/share_0"
                android:gravity="center_horizontal"
                android:text="复制链接"
                android:textColor="@color/color_text_content2"
                android:textSize="@dimen/font_size_normal" />
            <TextView
                android:visibility="gone"
                android:id="@+id/dialog_share_pic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/share_7"
                android:gravity="center_horizontal"
                android:text="图片分享"
                android:textColor="@color/color_text_content2"
                android:textSize="@dimen/font_size_normal" />
        </LinearLayout>

    </LinearLayout>

    <View style="@style/splitLinemarginLeftRight15Style"></View>

    <TextView
        android:id="@+id/dialog_share_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_back_white"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="取消"
        android:textColor="@color/color_text_content2"
        android:textSize="15sp" />
</LinearLayout>